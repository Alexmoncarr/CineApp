<Window x:Class="CineApp.GestionEntradasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CineApp"
        mc:Ignorable="d"
        Title="GestionEntradasWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="← Volver" Click="Volver_Click" Margin="5" HorizontalAlignment="Left"/>

        <ListBox x:Name="ListaEntradas"/>
        <Button Content="Modificar Entrada" Click="ModificarEntrada_Click"/>
        <Button Content="Eliminar Entrada" Click="EliminarEntrada_Click"/>
    </StackPanel>
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E0E0E2" Offset="0.0"/>
            <GradientStop Color="#7389AE" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
</Window>